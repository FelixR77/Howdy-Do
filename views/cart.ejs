<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') %>
<body>
    <%- include('partials/nav') %> 
    <h1> Your Cart</h1>

    <% if (cartItems.length === 0) { %>
        <p>Your Cart is Empty</p>
    <% } else { %>
        <ul>
            <% cartItems.forEach(item => { %>
                <li>
                    <h2><%= item.product.name %></h2>
                    <p>In Stock: <%= item.product.quantity %></p>
                    <p>In your Cart: <%= item.quantity %></p>
                    <p>Price: $<%= (item.product.price / 100) %></p>
                    <form action="/cart/<%= item._id %>?_method=PUT" method="POST">
                        <label>Update Quantity</label>
                        <input type="number" name="quantity" min="1" max="<%= item.product.quantity %>" value="<%= item.quantity %>">
                    </form>


                    <form action="/cart/<%= item._id %>?_method=DELETE" method="POST">
                        <button type="submit">Remove <%= item.product.name %> from Cart</button>
                    </form>
             </li>
            <% }); %>
        </ul>
    <% } %>


        <% if (cartItems.length === 0) { %>
            <form action="/cart/checkout" method="POST">
            <button type="submit" disabled>Complete Purchase</button>
            </form>
        <% } else { %>
            <form action="/cart/checkout" method="POST">
            <button type="submit">Complete Purchase</button>
            </form>
        <% } %>
    <%- include('partials/footer') %>
</body>
</html>